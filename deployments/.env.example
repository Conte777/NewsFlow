# ============================================
# Docker Compose Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# These variables are used by docker-compose.yml

# ============================================
# Telegram Configuration (REQUIRED)
# ============================================

# Get these from https://my.telegram.org/apps
# TELEGRAM_API_ID must be numeric
TELEGRAM_API_ID=
TELEGRAM_API_HASH=

# Comma-separated list of phone numbers
# Example: +79001234567,+79007654321
TELEGRAM_ACCOUNTS=

# Minimum number of accounts required to start (default: 1)
TELEGRAM_MIN_REQUIRED_ACCOUNTS=1

# ============================================
# News Collection Settings (OPTIONAL)
# ============================================

# How often to collect news (default: 30s)
NEWS_POLL_INTERVAL=30s

# Timeout for single collection cycle (default: 5m)
NEWS_COLLECTION_TIMEOUT=5m

# ============================================
# Logging (OPTIONAL)
# ============================================

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info
