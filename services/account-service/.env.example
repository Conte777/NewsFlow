# Telegram Configuration (https://my.telegram.org)
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_SESSION_DIR=./sessions
# Accounts are loaded from database (table: accounts with enabled=true)
# Interval for checking new accounts in database
TELEGRAM_ACCOUNT_SYNC_INTERVAL=1m
TELEGRAM_MIN_REQUIRED_ACCOUNTS=

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5434
DATABASE_USER=accounts_user
DATABASE_PASSWORD=accounts_pass
DATABASE_NAME=accounts_db
DATABASE_SSLMODE=disable

# Kafka Configuration
KAFKA_BROKERS=localhost:9093
KAFKA_GROUP_ID=account-service-group
KAFKA_TOPIC_NEWS_RECEIVED=news.received
KAFKA_TOPIC_SUBSCRIPTIONS_CREATED=subscriptions.created
KAFKA_TOPIC_SUBSCRIPTIONS_DELETED=subscriptions.deleted

# Logging
LOG_LEVEL=info

# Service Configuration
SERVICE_NAME=account-service
SERVICE_PORT=8084
SERVICE_SHUTDOWN_TIMEOUT=30s

# News Collection
NEWS_POLL_INTERVAL=30s
NEWS_COLLECTION_TIMEOUT=5m

# S3/MinIO Configuration
S3_ENDPOINT=localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=newsflow-media
S3_USE_SSL=false
S3_PUBLIC_URL=http://localhost:9000
